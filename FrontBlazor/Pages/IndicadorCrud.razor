        {
            string codigo = ObtenerValor(indicador, "id");
            bool resultado = await servicioEntidad.EliminarAsync(
                "proyecto", 
                "indicador", 
                "id", 
                codigo);
                
            if (resultado)
            {
                Indicadores.Remove(indicador);
                IndicadoresSeleccionado.Remove(indicador);
            }
        }
        seleccionarTodos = false;
    }
